<%- include('layouts/header.ejs') %>
<div class="container">
	<!-- logo -->
	<h1 class="text-center text-6xl my-10 font-semibold text-blue-800">Mo-Fi</h1>

	<!-- header search -->
	<div class="search flex justify-center my-10">
		<input
			type="search"
			name="search"
			id="search"
			placeholder="search"
			class="w-80 h-12 pl-10 rounded-md text-lg shadow-md shadow-blue-300"
			s
		/>
		<input
			type="button"
			value="Search"
			class="w-20 h-12 rounded-md text-lg shadow-md bg-blue-400 text-white shadow-blue-300 hover:shadow-blue-500 active:bg-blue-600"
		/>
	</div>

	<!-- card -->
	<div class="container grid grid-cols-5 gap-5 px-16 py-10">
		<% for( let i = 0; i < data.length; i++ ) { %>
		<div
			class="box grid-rows-3 w-60 h-64 bg-white shadow-md shadow-blue-300 hover:shadow-blue-500 rounded-lg px-6 py-2"
		>
			<img
				src="<%= uriImg %><%= data[i].backdrop_path===null?data[i].poster_path:data[i].backdrop_path %>  "
				alt=""
				class="w-60 h-28 rounded-t-lg"
			/>
			<p class="w-52 h-10 mt-2"><%= data[i].title %></p>
			<p class="w-52 h-20 py-3 truncate overflow-hidden"><%= data[i].overview %></p>
		</div>
		<% } %>
	</div>

	<!-- Pagination -->
	<div class="text-center my-10">
		<nav aria-label="Page navigation example">
			<ul class="inline-flex -space-x-px">
				<li>
					<a
						href="#"
						class="py-2 px-3 ml-0 leading-tight text-blue-800 bg-white rounded-l-lg border border-blue-400 hover:bg-gray-100 hover:text-gray-700"
						>Previous</a
					>
				</li>
				<% for( let i = 1; i <= 5; i++ ) { %>
				<li>
					<a
						href="/dashboard/<%= i %> "
						class="py-2 px-3 leading-tight text-blue-800 bg-white border border-blue-400 hover:bg-gray-100 hover:text-gray-700"
						><%= i %>
					</a>
				</li>
				<% } %>
				<li>
					<a
						href="#"
						class="py-2 px-3 leading-tight text-blue-800 bg-white rounded-r-lg border border-blue-400 hover:bg-gray-100 hover:text-gray-700"
						>Next</a
					>
				</li>
			</ul>
		</nav>
	</div>
</div>
<%- include('layouts/closer') %>
